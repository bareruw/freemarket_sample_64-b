.menber__payment__input

  = render "shared/users/headers"

  %main.l-container.clearfix
    .l-content
      %section.l-chapter-container
        %h2.l-chapter-head お支払い方法
        = form_with model: @card, local: true, action: "create", class:"l-single-inner registration-form", method: :post do |f|
          -# %input{name:"__csrf_value", type: "hidden", value: "#"}/
          .l-single-content
            .form-group
              = f.label :number do
                カード番号
              %span.form-require 必須
              = f.text_field :number, placeholder: "半角数字のみ", class:"input-default", datainputtype:"card", id: "card_number"
              %ul#card-no-error-wrapper.has-error-text
              %ul.signup-card-list
                = image_tag 'creditCard_img.png'
            .form-group.signup-form-expire
              = f.label :exp_month do
                有効期限
              %span.form-require 必須
              %br/
              .select-wrap.half
                = f.select :exp_month, [*1..12], { prompt: "--"}, class:"select-default"
                %i.icon-arrow-bottom
                %span 月
              .select-wrap.half
                = f.select :exp_year, [*19..29], { prompt: "--"}, class:"select-default"
                %i.icon-arrow-bottom
                %span 年
              %ul#expire-mm-error-wrapper.has-error-text
              %ul#expire-yy-error-wrapper.has-error-text
            .form-group
              = f.label :cvc do
                セキュリティコード
              %span.form-require 必須
              = f.text_field :cvc, placeholder: "カード背面4桁もしくは3桁の番号", class:"input-default", datainputtype:"card", id:"cvc"
              %ul#security-code-error-wrapper.has-error-text
              .signup-seqcode
                .signup-seqcode-text{"data-js":"show-tips-toggle"}
                  %span.form-question> ?
                  カード裏面の番号とは？
                .signup-seqcode-info{"data-js":"show-tips-content"}
                  カードの裏面をご参照ください。
                  %br/
                  = image_tag 'creditCard_back_img.png', size:'200x100'
            -# 後から使うかも
            -# %input#user_id{name: "user_id", type: "hidden", value: "642311628"}/
            -# %input#encrypted_card_data{name: "encrypted_card_data", type: "hidden"}/
            -# %p#primary-error.has-error-text
            -# %input{name: "after_save_callback", type: "hidden", value: ""}/
            = f.submit value: "追加する", class:"btn-default btn-red", id: 'token_submit'
  .payment__footer  
    = render "shared/users/footers"
  
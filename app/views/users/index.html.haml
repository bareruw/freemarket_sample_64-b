-# 新規会員登録ページ
.signUp__wrapper
  = render "shared/users/header"

  %main.single-main
    %section.l-single-container
      %h2.l-single-head.registration 
        新規会員登録
      .l-single-inner.registration-form
        .l-single-content
          %a.btn-default.btn-mail{:href => "https://www.mercari.com/jp/signup/registration/"}
            %i.icon-mail
            = fa_icon ("envelope 2x"), class: "sign_mail_icon"
            メールアドレスで登録する
          %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
            %i.icon-facebook
            = fa_icon ("facebook-square 2x"), class: "sign_facebook_icon"
            Facebookで登録する
          %button#google-login.btn-default.btn-sns.btn-sns-google
            = fa_icon ("google 2x"), class: "sign_google_icon"
            Googleで登録する

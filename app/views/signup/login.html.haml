.logIn__wrapper
  .logIn__header
    = render "shared/users/header"
  
  .logIn__main
  .login-panel
    .login-no-account
      %p アカウントをお持ちでない方はこちら
      = link_to signup_index_path do 
        新規会員登録
    .login-form-inner
      %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
        = link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, method: :post
      %button#google-login.btn-default.btn-sns.btn-sns-google
        = link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, method: :post
      .login-form-inner
        .form-group
          %input.login-input-text.input-default{name: "email", placeholder: "メールアドレス", type: "email", value: ""}/
        .form-group
          %input.login-input-text.input-default{name: "password", placeholder: "パスワード", type: "password"}/
        .form-group
          .g-recaptcha.login-captcha{"data-sitekey":"#"}
            %div{style: "width: 304px; height: 78px;"}
              %div
                %iframe{frameborder: "0", height: "78", name: "a-nf0u4ytti37y", role: "presentation", sandbox: "allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation allow-modals allow-popups-to-escape-sandbox", :scrolling => "no", src:"https://www.google.com/recaptcha/api2/anchor?ar=2&k=6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc&co=aHR0cHM6Ly93d3cubWVyY2FyaS5jb206NDQz&hl=ja&v=PRkVene3wKrZUWATSylf69ja&size=normal&cb=xbmuvc3wlc1m", :width => "304"}
              %textarea#g-recaptcha-response.g-recaptcha-response{name: "g-recaptcha-response", style: "width: 250px; height: 40px; border: 1px solid rgb(193, 193, 193); margin: 10px 25px; padding: 0px; resize: none; display: none;"}
        %button.login-submit.btn-default.btn-red{type: "submit"} ログイン
        %input{name: "login_callback", type: "hidden", value: "/jp/"}/
        %input{name: "__csrf_value", type: "hidden", value: ""}/
        %p.password__link 
          = link_to "#" do 
            パスワードをお忘れの方
  %form#login_form_facebook{action: "/jp/login/", method: "POST", novalidate: "novalidate"}
    %input{name: "__csrf_value", type: "hidden", value: ""}/
    %input{name: "nickname", type: "hidden", value: ""}/
    %input{name: "email", type: "hidden", value: ""}/
    %input{name: "facebook_user_id", type: "hidden", value: ""}/
    %input{name: "facebook_access_token", type: "hidden", value: ""}/
    %input{name: "login_type", type: "hidden", value: "facebook"}/
    %input{name: "login_callback", type: "hidden", value: "/jp/"}/
  %form#login_form_google{action: "/jp/login/", method: "POST", novalidate: "novalidate"}
    %input{name: "__csrf_value", type: "hidden", value: ""}/
    %input{name: "nickname", type: "hidden", value: ""}/
    %input{name: "email", type: "hidden", value: ""}/
    %input{name: "google_user_id", type: "hidden", value: ""}/
    %input{name: "google_access_token", type: "hidden", value: ""}/
    %input{name: "login_type", :type => "hidden", :value => "google"}/
    %input{name: "login_callback", :type => "hidden", :value => "/jp/"}/
  %input#google_client_id{type: "hidden", value: ""}/
  %input#facebook_app_id{type: "hidden", value: ""}/
  
  .logIn__footer
    = render "shared/users/footers"
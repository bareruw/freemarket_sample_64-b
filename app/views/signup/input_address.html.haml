.input__address__wrapper
  
  = render "shared/users/headers"

  %main.single-main
    %section.l-single-container
      %h2.l-single-head.registration 住所入力
      = form_with model: @user, local: true, url:payment_signup_index_path, class:"l-single-inner registration-form", method: :get do |f|
        -# %input{name: "__csrf_value", type: "hidden", value: ""}/
        .l-single-content
          .form-group
            = f.label :family_name_kanji do
              お名前
            %span.form-require 必須
            = f.text_field :family_name_kanji, placeholder: "例) 山田", class:"input-default"
            = f.text_field :first_name_kanji, placeholder: "例) 彩", class:"input-default"
          %input{name: "login_type", type: "hidden", value: ""}/
          .form-group
            = f.label :family_name_kana do
              お名前カナ
            %span.form-require 必須
            = f.text_field :family_name_kana, placeholder: "例) ヤマダ", class:"input-default"
            = f.text_field :first_name_kana, placeholder: "例) アヤ", class:"input-default"
          %input{name: "login_type", type: "hidden", value: ""}/
          .form-group.form-password-revelation
            = f.fields_for :address do |f|
              = f.label :postcode do
                郵便番号
              %span.form-require 必須
              = f.text_field :postcode, placeholder: "例）123-4567", class:"input-default"
              .form-group
                = f.label :prefecture do
                  都道府県
              %span.form-require 必須
              .prefectures-select.tab
                = f.collection_select :prefecture, Prefecture.all, :id, :name
              .form-group
                = f.label :city do
                  市区町村
                %span.form-require 必須
                = f.text_field :city, placeholder: "例）横浜市緑区", class:"input-default"
              .form-group
                = f.label :block do
                  番地
                %span.form-require 必須
                = f.text_field :block, placeholder: "例）青山1-1-1", class:"input-default"
              .form-group
                = f.label :building do
                  建物名
                %span.form-lay 任意
                = f.text_field :building, placeholder: "例）○○ビル", class:"input-default"
              .form-group
                = f.label :block do
                  番地
                %span.form-lay 任意
                = f.text_field :block, placeholder: "例）123456789", class:"input-default"
            = f.submit value: "次へ進む", class:"btn-default btn-red"
    
    = render "shared/users/footers"     
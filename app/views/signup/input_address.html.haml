.input__address__wrapper
  
  = render "shared/users/headers"

  %main.single-main
    %section.l-single-container
      %h2.l-single-head.registration 住所入力
      = form_with model: @user, local: true, url: signup_index_path, class:"l-single-inner registration-form", method: :post do |f|
        = f.fields_for :address do |address_form|
          .l-single-content
            .form-group
              = address_form.label :family_name do
                お名前
              %span.form-require 必須
              = address_form.text_field :family_name, placeholder: "例) 山田", class:"input-default"
              = address_form.text_field :first_name, placeholder: "例) 彩", class:"input-default"
            .form-group
              = f.label :family_name_kana do
                お名前カナ
              %span.form-require 必須
              = address_form.text_field :family_name_katakana, placeholder: "例) ヤマダ", class:"input-default"
              = address_form.text_field :first_name_katakana, placeholder: "例) アヤ", class:"input-default"
            .form-group.form-password-revelation
              = address_form.label :postcode do
                郵便番号
              %span.form-require 必須
              = address_form.text_field :postcode, placeholder: "例）123-4567", class:"input-default"
              .form-group
                = address_form.label :prefecture do
                  都道府県
                %span.form-require 必須
                .prefectures-select.tab
                  = address_form.select :prefecture, class:"prefecture-select-default" do
                    %option{value: ""} 選択してください
                    %option{value: "北海道"} 北海道
                    %option{value: "青森県"} 青森県
                    %option{value: "岩手県"} 岩手県
                    %option{value: "宮城県"} 宮城県
                    %option{value: "秋田県"} 秋田県
                    %option{value: "山形県"} 山形県
                    %option{value: "福島県"} 福島県
                    %option{value: "茨城県"} 茨城県
                    %option{value: "栃木県"} 栃木県
                    %option{value: "群馬県"} 群馬県
                    %option{value: "埼玉県"} 埼玉県
                    %option{value: "千葉県"} 千葉県
                    %option{value: "東京都"} 東京都
                    %option{value: "神奈川県"} 神奈川県
                    %option{value: "新潟県"} 新潟県
                    %option{value: "富山県"} 富山県
                    %option{value: "石川県"} 石川県
                    %option{value: "福井県"} 福井県
                    %option{value: "山梨県"} 山梨県
                    %option{value: "長野県"} 長野県
                    %option{value: "岐阜県"} 岐阜県
                    %option{value: "静岡県"} 静岡県
                    %option{value: "愛知県"} 愛知県
                    %option{value: "三重県"} 三重県
                    %option{value: "滋賀県"} 滋賀県
                    %option{value: "京都府"} 京都府
                    %option{value: "大阪府"} 大阪府
                    %option{value: "兵庫県"} 兵庫県
                    %option{value: "奈良県"} 奈良県
                    %option{value: "和歌山県"} 和歌山県
                    %option{value: "鳥取県"} 鳥取県
                    %option{value: "島根県"} 島根県
                    %option{value: "岡山県"} 岡山県
                    %option{value: "広島県"} 広島県
                    %option{value: "山口県"} 山口県
                    %option{value: "徳島県"} 徳島県
                    %option{value: "香川県"} 香川県
                    %option{value: "愛媛県"} 愛媛県
                    %option{value: "高知県"} 高知県
                    %option{selected: "selected", value: "福岡県"} 福岡県
                    %option{value: "佐賀県"} 佐賀県
                    %option{value: "長崎県"} 長崎県
                    %option{value: "熊本県"} 熊本県
                    %option{value: "大分県"} 大分県
                    %option{value: "宮崎県"} 宮崎県
                    %option{value: "鹿児島県"} 鹿児島県
                    %option{value: "沖縄県"} 沖縄県
              .form-group
                = address_form.label :city do
                  市区町村
                %span.form-require 必須
                = address_form.text_field :city, placeholder: "例）横浜市緑区", class:"input-default"
              .form-group
                = address_form.label :block do
                  番地
                %span.form-require 必須
                = address_form.text_field :block, placeholder: "例）青山1-1-1", class:"input-default"
              .form-group
                = address_form.label :building do
                  建物名
                %span.form-lay 任意
                = address_form.text_field :building, placeholder: "例）○○ビル", class:"input-default"
              .form-group
                = address_form.label :telephone_number do
                  電話番号
                %span.form-lay 任意
                = address_form.text_field :telephone_number, placeholder: "例）123456789", class:"input-default"
              = f.submit value: "次へ進む", class:"btn-default btn-red"
      
    = render "shared/users/footers"     
      
        
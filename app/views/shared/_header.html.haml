.start
  .header
    .header__box
      .header__input__box
        %a.header__image
          = image_tag "fmarket_logo_red.svg", size: "134x36"
        .foom
          %input.search__box{name: "keyword", placeholder: "何かお探しですか？", type: "search", value: ""}/
          %button.header--btn
            -# %i.fa.fa-search
    .header__bottom
      .header__bottom__left
        %a.category{ href: 'http://google.co.jp' }
          カテゴリーから探す
        %a{ href: 'http://google.co.jp' }
          ブランドから探す
      .header__bottom__right
        - if user_signed_in?
          %ul.header__navi
          %li.header__navi__link
          = link_to "いいね！一覧", '#',class:"link"
          %i.far.fa-heart
          = link_to "お知らせ", "#" ,class:"menu"
          %i.icon-bell
          = link_to "やることリスト", "#" ,class:"link"
          %i.icon-check
          = link_to "マイページ", users_show_path ,class:"link"
        - else
          = link_to new_member_signup_index_path, class: "registration" do
            新規会員登録
          = link_to new_user_session_path, class: "login" do
            ログイン